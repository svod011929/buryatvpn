# ==============================================
# BuryatVPN Configuration Template
# ==============================================
# Скопируйте этот файл в .env и заполните своими значениями

# ==============================================
# Telegram Bot Configuration
# ==============================================
BOT_TOKEN=your_bot_token_from_botfather
ADMIN_IDS=123456789,987654321
BOT_USERNAME=your_bot_username

# ==============================================
# Database Configuration
# ==============================================
# Для разработки (SQLite)
DATABASE_URL=sqlite:///data/database.db

# Для продакшена (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/buryatvpn

# ==============================================
# Redis Configuration
# ==============================================
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# ==============================================
# Security Configuration
# ==============================================
SECRET_KEY=your-super-secret-key-here-change-me
ENCRYPTION_KEY=your-fernet-encryption-key-here

# JWT настройки
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600

# ==============================================
# Web Panel Configuration
# ==============================================
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_DEBUG=False

# Администратор веб-панели
WEB_ADMIN_EMAIL=admin@example.com
WEB_ADMIN_PASSWORD_HASH=your-bcrypt-password-hash

# ==============================================
# Payment Systems
# ==============================================

# YooKassa
YOOKASSA_SHOP_ID=your_yookassa_shop_id
YOOKASSA_API_KEY=your_yookassa_api_key
YOOKASSA_WEBHOOK_SECRET=your_webhook_secret

# CryptoPay
CRYPTOPAY_API_TOKEN=your_cryptopay_token
CRYPTOPAY_WEBHOOK_SECRET=your_cryptopay_webhook_secret

# ==============================================
# X-UI Panel Configuration
# ==============================================
XUI_DEFAULT_HOST=your-server-host.com
XUI_DEFAULT_PORT=54321
XUI_DEFAULT_PATH=your-secret-path
XUI_DEFAULT_USERNAME=admin
XUI_DEFAULT_PASSWORD=admin
XUI_SSL_VERIFY=True

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=10

# ==============================================
# Monitoring & Metrics
# ==============================================
METRICS_ENABLED=True
PROMETHEUS_PORT=9090

# ==============================================
# Email Configuration (для уведомлений)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@buryatvpn.com

# ==============================================
# Development Settings
# ==============================================
DEBUG=False
TESTING=False
